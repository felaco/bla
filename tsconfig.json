{
  "compilerOptions": {
    "module": "umd",
    "target": "es6",
    "sourceMap": false,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "allowJs": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "importHelpers": true,
    "declaration": false
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules"
  ]
}